<h1 id="article-title">
  <i class="fa fa-tags" aria-hidden="true"></i>
  Tags
</h1>
<h3>
  There are <%- site.tags.length %> tags.
</h3>

<div id="article-content">
  <% if (theme.style && theme.style.tags && theme.style.tags.display=="line" ) { %>
    <% if (site.tags && site.tags.length) { %>
      <% var tags=[]; site.tags.forEach(function(tag){ tags.push('<a href="' + config.root + tag.path + '">' +
        tag.name + '</a>');
        });
        %>
        <div class="tags">
          <%- tags.join(', ') %>
  </div>
  <% } %>
  <% } else { %>
  <ul>
    <% if (site.tags && site.tags.length) { %>
    <% site.tags.forEach(function(tag){ %>
    <li class="menu-item">
      <span>
        <a class="no-link" href="/<%- tag.path %>"><%- tag.name %>(<%- tag.length %>)</a>
      </span>
    </li>
    <% }); %>
    <% } %>
  </ul>
  <% } %>
</div>